{
  "name": "@async-modals/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "React library for showing modal windows using hooks and promises ",
  "author": "Alexander Nicholson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexn400/async-modals.git"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "@babel/core": "^7.12.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.0",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.12.0",
    "@preconstruct/cli": "^2.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "cross-env": "^5.1.3",
    "dotenv": "^7.0.0",
    "eslint": "^4.6.1",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^1.18.2",
    "react": "^16.13.0",
    "react-router-dom": "^4.2.2",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "cp README.md packages/async-modals/README.md && preconstruct build",
    "watch": "preconstruct watch",
    "prettier:write": "prettier --write \"**/*.js\"",
    "prettier:check": "prettier --check \"**/*.js\"",
    "lint": "eslint .",
    "start": "cd docs && yarn start",
    "fresh": "rm -rf node_modules && yarn",
    "test": "npm run test:jest && npm run test:cypress",
    "test:jest": "jest --coverage",
    "postinstall": "preconstruct dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "combobox"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "./node_modules"
    ],
    "testRegex": "src/*(/(__tests?__/)([^_].*/)*?[^_][^/]*?\\.(test|spec)?\\.(js?))$",
    "setupFilesAfterEnv": [
      "./test-setup.js"
    ]
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "browser": {
    "./dist/async-modals.cjs.js": "./dist/async-modals.browser.cjs.js",
    "./dist/async-modals.esm.js": "./dist/async-modals.browser.esm.js"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
